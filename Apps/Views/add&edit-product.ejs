<%- include('header') -%>
<title>Add product</title>
</head>
<body>
  <div class="container">
    <h1 class="text-center text-info">Please Fill Out Product Information</h1>
    <form class="text-info" action="" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="prd_name">Name</label>
        <input class="form-control" type="text" name="prd_name" id="prd_name">
      </div>

      <div class="form-group">
        <label for="prd_price">Price</label>
        <input class="form-control" type="text" name="prd_price" id="prd_price">
      </div>

      <div class="form-group">
        <label for="prd_details">Details</label>
        <input class="form-control" type="text" name="prd_details" id="prd_details">
      </div>
      <div class="form-group">
        <label>Category</label>
        <select name="cat_id" class="form-control">
            <%for(x in data.category){%>
            <option value=<%=data.category[x]._id%>><%=data.category[x].cat_name%></option>
            <%}%>
        </select>
      </div>
      <div class="form-group">
        <input class="form-control" type="file" name="prd_image">
      </div>

      <div class="form-group">
        <button class="btn btn-block btn-info" type="submit">Upload</button>
      </div>
    </form>
    <a class="btn btn-block btn-info" href="#">Back</a>
  </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>