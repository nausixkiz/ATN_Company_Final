<%- include('header') -%>
<title>Register</title>
</head>
<body>
  <div class="container">
<%- include('navbar') -%>
<%- include('./layout/errors') -%>
<% if(locals.input) { %>
      <h1 class="text-center text-info">ATN Register</h1>
      
      <form action="" method="POST" class="text-info">
        <div class="form-group">
          <label for="username">Username</label>
          <input class="form-control" type="text" name="username" value="<%= input.username %>" id="username">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password" value="<%= input.password %>" id="password">
        </div>

        <div class="form-group">
          <label for="passwordConf">Confirm Password</label>
          <input class="form-control" type="password" name="passwordConf" value="<%= input.passwordConf %>" id="passwordConf">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="text" name="email" value="<%= input.email %>" id="email">
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-info" type="submit">Register</button>
        </div>
      </form>
<% } else { %>
  <h1 class="text-center text-info">ATN Register</h1>
      <form action="" method="POST" class="text-info">
          <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" type="text" name="username" id="username">
          </div>
          
          <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" type="password" name="password" id="password">
          </div>

          <div class="form-group">
            <label for="passwordConf">Confirm Password</label>
            <input class="form-control" type="password" name="passwordConf" id="passwordConf">
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="text" name="email" id="email">
          </div>
          
          <div class="form-group">
            <button class="btn btn-info btn-block" type="submit">Register</button>
          </div>
        </form>
<% } %>
        <a href="/" class="btn btn-block btn-info">Back</a>
</div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>